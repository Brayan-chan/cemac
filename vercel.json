{
  "version": 2,
  "builds": [
    {
      "src": "server/server.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/auth/(.*)",
      "dest": "/server/server.js"
    },
    {
      "src": "/api/(.*)",
      "dest": "/server/server.js"
    },
    {
      "src": "/css/(.*)",
      "dest": "/public/css/$1"
    },
    {
      "src": "/js/(.*)",
      "dest": "/public/js/$1"
    },
    {
      "src": "/views/(.*)",
      "dest": "/public/views/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/server/server.js"
    }
  ],
  "env": {
    "PORT": "3000"
  }
}